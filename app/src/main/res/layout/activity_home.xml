<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.familyapp.familyapp.HomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Family App"
        android:textSize="40dp"
        android:layout_weight="2"
        android:gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="Komen Eten"
        android:textSize="20dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:onClick="onClickKomenEten"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="Boodschappenlijst"
        android:textSize="20dp"
        android:layout_margin="30dp"
        android:onClick="onClickBoodschappenLijst"/>

</LinearLayout>
